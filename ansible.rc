# begin of ansible.rc
# Ansible via Docker aliases 
alias ansible="docker run --rm -it -v $(pwd):/ansible -v ~/.ssh:/root/.ssh -w /ansible alpine/ansible ansible"
alias ansible-playbook="docker run --rm -it -v $(pwd):/ansible -v ~/.ssh:/root/.ssh -w /ansible alpine/ansible ansible-playbook"
alias ansible-galaxy="docker run --rm -it -v $(pwd):/ansible -v ~/.ssh:/root/.ssh -w /ansible alpine/ansible ansible-galaxy"
alias ansible-vault="docker run --rm -it -v $(pwd):/ansible -v ~/.ssh:/root/.ssh -w /ansible alpine/ansible ansible-vault"
# end of ansible.rc
